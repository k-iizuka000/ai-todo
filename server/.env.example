# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ai_todo_dev"

# Server Configuration
PORT=3001
NODE_ENV=development
APP_VERSION=1.0.0

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Logging Configuration
LOG_LEVEL=debug

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_DEV=1000
RATE_LIMIT_PROD=100

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@aitodo.example.com

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_KEY=your-analytics-key-here

# Cache Configuration (Redis - optional)
REDIS_URL=redis://localhost:6379

# API Keys for external services
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here